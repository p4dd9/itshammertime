{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended"],
	"jsRules": {},
	"rules": {
		"no-unused-variable": [true, { "ignore-pattern": "^_" }],
		"indent": [true, "tabs", 4],
		"no-console": false,
		"quotemark": {
			"options": ["single", "avoid-escape"]
		},
		"arrow-parens": false,
		"trailing-comma": {
			"options": {
				"esSpecCompliant": true,
				"multiline": {
					"arrays": "always",
					"objects": "always",
					"functions": "never",
					"typeLiterals": "always"
				},
				"singleline": "never"
			}
		},
		"semicolon": {
			"options": ["always", "ignore-bound-class-methods"]
		},
		"object-literal-key-quotes": {
			"options": ["as-needed"]
		},
		"ordered-imports": false,
		"member-ordering": false,
		"object-literal-sort-keys": false
	},
	"rulesDirectory": []
}
